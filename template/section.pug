doctype html
html(lang=language)
    head
        include includes/head.pug
        title=modName + ' - ' + bookName + ' - ' + sectionTitle
    body
        include includes/header.pug

        div(class="main-outer")
            section(class="main")
                h2 !{sectionTitle}
                each val in sectionParagraphs
                    p !{val}
                each val in sectionAppendices
                    div(class="appendix-wrapper") !{val}
                include includes/main-footer.pug

        include includes/footer.pug
